{
  "manifest_version": 3,
  "name": "Image Downloader",
  "version": "1.0",
  "description": "Chọn ảnh trên trang và tải xuống",
  "permissions": [
    "scripting",
    "downloads",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  }
}